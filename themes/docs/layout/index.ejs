<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title><%= page.title %> - Campo UI</title>
    <link rel="stylesheet" href="/material-ui.css">
    <link rel="stylesheet" href="/theme.css">
    <script type="module">
      import { init } from '/material-ui.bundle.js'
      init()
    </script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class="app-bar app-bar--sticky-top">
      <div class="app-bar__action display-none display-block-on-phone">
        <button type="button" class="button button--icon" data-controller="toggle" data-toggle-target="#drawer" data-toggle-action="drawer#toggle">
          <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/></svg>
        </button>
      </div>
      <div class="app-bar__title">
        <a href="/">Material UI</a>
      </div>
    </div>

    <div class="display-flex">
      <div id="drawer" class="drawer drawer--app-bar-margin" data-controller="drawer">
        <div class="drawer__container">
          <div class="drawer__menu">
            <% ['introduction', 'webpack', 'rails', 'typography'].forEach(function(name) { %>
              <% itemPath = name + '.html'  %>
              <a href="/<%= itemPath %>" class="drawer__item <%= page.path == itemPath ? 'drawer__item--active' : '' %>">
                <%= name.split('-').map(term => term[0].toUpperCase() + term.slice(1)).join(' ') %>
              </a>
            <% }); %>
          </div>
          <details <%= page.path.startsWith('components') ? 'open' : '' %> >
            <summary class="drawer__item">
              <div class="drawer__item__label">
                Components
              </div>
              <div class="drawer__item__icon">
                <span class="material-icons">expand_more</span>
              </div>
            </summary>
            <div class="padding-left-3">
              <% ['app-bar', 'button', 'card', 'chip', 'dialog', 'dropdown', 'navigation-drawer', 'navigation-bar', 'navigation-rail', 'text-field', 'selection-control', 'selector', 'form', 'list', 'snackbar', 'sheet', 'table'].forEach(function(name) { %>
                <% itemPath = 'components/' + name + '.html'  %>
                <a href="/<%= itemPath %>" class="drawer__item <%= page.path == itemPath ? 'drawer__item--active' : '' %>">
                  <%= name.split('-').map(term => term[0].toUpperCase() + term.slice(1)).join(' ') %>
                </a>
              <% }); %>
            </div>
          </details>
          <details <%= page.path.startsWith('utilities') ? 'open' : '' %> >
            <summary class="drawer__item">
              <div class="drawer__item__label">
                Utitlties
              </div>
              <div class="drawer__item__icon">
                <span class="material-icons">expand_more</span>
              </div>
            </summary>
            <div class="padding-left-3">
              <% ['background', 'border', 'spacing'].forEach(function(name) { %>
                <% itemPath = 'utilities/' + name + '.html'  %>
                <a href="/<%= itemPath %>" class="drawer__item <%= page.path == itemPath ? 'drawer__item--active' : '' %>">
                  <%= name.split('-').map(term => term[0].toUpperCase() + term.slice(1)).join(' ') %>
                </a>
              <% }); %>
            </div>
          </details>
        </div>
        <div class="drawer__scrim" data-action="click->drawer#close">
        </div>
      </div>

      <div class="flex-grow-1 min-width-0">
        <div class="padding">
          <%- page.content %>
        </div>
      </div>
    </div>
  </body>
</html>
